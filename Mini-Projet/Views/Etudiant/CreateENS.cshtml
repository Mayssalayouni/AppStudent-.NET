     <body>
<!-- Menu de navigation en haut -->
<nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="@Url.Action("Admin", "Etudiant")>AppStudent ♥</a>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">Accueil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Gestion des absences</a>
            </li>
        </ul>
    </div>
</nav>
    <div class="container">
        <h2>Ajouter un Enseignant</h2>

<!-- Affichage des alertes -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Zone pour les messages -->
<div id="messageBox" class="alert" style="display:none;"></div>

        <form id="enseignantForm" asp-action="CreateENS" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="Nom">Nom</label>
                <input type="text" id="Nom" name="Nom" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="Prenom">Prénom</label>
                <input type="text" id="Prenom" name="Prenom" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="DateRecrutement">Date de Recrutement</label>
                <input type="date" id="DateRecrutement" name="DateRecrutement" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="Adresse">Adresse</label>
                <input type="text" id="Adresse" name="Adresse" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="Mail">Email</label>
                <input type="email" id="Mail" name="Mail" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="Tel">Téléphone</label>
                <input type="tel" id="Tel" name="Tel" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="CodeDepartement">Département</label>
                <select id="CodeDepartement" name="CodeDepartement" class="form-control" required>
                    <option value="">-- Sélectionnez un département --</option>
                    @foreach (var departement in ViewBag.Departements)
                    {
                        <option value="@departement.CodeDepartement">@departement.NomDepartement</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="CodeGrade">Grade</label>
                <select id="CodeGrade" name="CodeGrade" class="form-control" required>
                    <option value="">-- Sélectionnez un grade --</option>
                    @foreach (var grade in ViewBag.Grades)
                    {
                        <option value="@grade.CodeGrade">@grade.NomGrade</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Ajouter</button>
        </form>
    </div>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </body>
    </html>

