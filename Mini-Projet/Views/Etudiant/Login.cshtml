@model Mini_Projet.Models.Enseignant

@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Styles CSS pour la page -->
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            /* background-color: #f4f7fc; */
            background-image: url("https://www.campusfrance.org/sites/default/files/Fotolia_182044577_Subscription_Monthly_M_0.jpg");
        }

        .navbar {
            background-color: #007bff;
        }

            .navbar a {
                color: white;
                padding: 14px 20px;
                text-decoration: none;
                text-align: center;
            }

                .navbar a:hover {
                    background-color: #0056b3;
                    color: white;
                }

        .container {
            margin-top: 30px;
            padding-top: 5px;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 30px;
        }

            .container .h2 {
                font-weight: bold;
                color: #0056b3;
                text-align: center;
            }

        .form-group label {
            font-weight: bold;
            color: #0056b3;
        }

        .form-group input, form-control {
            background-color: rgba(#0056b3, #0056b3, #0056b3, 0.8);
            border-radius: 30px;
            height: 45px;
        }


        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .alert-warning {
            margin-top: 20px;
        }

        /* Styles pour le menu de navigation */
        .navbar {
            margin-bottom: 30px;
        }

        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 4px;
        }

        .alert-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }
    </style>

</head>
<body>
    <!-- Menu de navigation en haut -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="#">AppStudent ♥</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Gestion des absences</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <h2>Connexion </h2>

        <!-- Affichage des alertes -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }

        <form id="login" asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="Mail">Email</label>
                <input type="email" id="EmailUser" name="EmailUser" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="mdp">Mot de passe</label>
                <input type="password" id="Mdp" name="Mdp" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Se connecter</button>
            <a href="@Url.Action("Register", "Etudiant")" class="btn btn-link btn-block">S'inscrire</a>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

