<h2>Liste des Étudiants Absents Par Date</h2>

<form method="post" asp-action="ListeAbsents">
    <div>
        <label for="date">Date :</label>
        <input type="date" id="date" name="date" required />
    </div>
    <div>
        <label for="classe">Classe :</label>
        <select id="classe" name="codeClasse" required>
            <option value="">-- Choisissez une classe --</option>
                    @foreach (var classe in ViewBag.Classes)
                    {
                    <option value="@classe.CodeClasse">@classe.NomClasse</option>
                    }
        </select>
    </div>
    <button type="submit">Afficher la liste</button>
</form>

        @if (ViewBag.Absents != null && ViewBag.Absents.Count > 0)
        {
        <h2>Résultats :</h2>
        <table>
            <thead>
                <tr>
                    <th>Nom de l'Étudiant</th>
                    <th>Classe</th>
                    <th>Date d'Absence</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var absent in ViewBag.Absents)
                    {
                        <tr>
                            <td>@absent.Etudiant</td>
                            <td>@absent.Classe</td>
                            <td>@absent.DateAbsence.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
            </tbody>
        </table>
        }
        else if (ViewBag.Absents != null)
        {
        <p>Aucun étudiant absent pour cette date et cette classe.</p>
        }

        </div>
    <script>
        // Mettre à jour la valeur du champ hidden avec la sélection de CodeClasse
        document.getElementById('CodeClasse').addEventListener('change', function () {
            document.getElementById('HiddenCodeClasse').value = this.value;
        });
    </script>
