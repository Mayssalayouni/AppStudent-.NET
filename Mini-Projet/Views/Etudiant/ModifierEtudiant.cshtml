@{
    ViewData["Title"] = "Modfifie étudiant ";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier un étudiant</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            /* background-color: #f4f7fc; */
            background-image: url("https://www.campusfrance.org/sites/default/files/Fotolia_182044577_Subscription_Monthly_M_0.jpg");
        }

        .navbar {
            background-color: #007bff;
        }

            .navbar a {
                color: white;
                padding: 14px 20px;
                text-decoration: none;
                text-align: center;
            }

                .navbar a:hover {
                    background-color: #0056b3;
                    color: white;
                }

        .container {
            margin-top: 30px;
            padding-top: 5px;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 30px;
        }

            .container .h2 {
                font-weight: bold;
                color: #0056b3;
                text-align: center;
            }

        .form-group label {
            font-weight: bold;
            color: #0056b3;
        }

        .form-group input, form-control {
            background-color: rgba(#0056b3, #0056b3, #0056b3, 0.8);
            border-radius: 30px;
            height: 45px;
        }


        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            margin-bottom: 20px;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .alert-warning {
            margin-top: 20px;
        }

        /* Styles pour le menu de navigation */
        .navbar {
            margin-bottom: 30px;
        }

        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 4px;
        }

        .alert-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }

    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Modifier un étudiant</h2>
        <form action="ModifierEtudiant" method="post">
            <input type="hidden" name="CodeEtudiant" value="<!-- ID de l'étudiant -->" />

            <div class="form-group">
                <label for="Nom">Nom</label>
                <input type="text" name="Nom" id="Nom" class="form-control" placeholder="Entrez le nom"  />
            </div>

            <div class="form-group">
                <label for="Prenom">Prénom</label>
                <input type="text" name="Prenom" id="Prenom" class="form-control" placeholder="Entrez le prénom"  />
            </div>

            <div class="form-group">
                <label for="DateNaissance">Date de naissance</label>
                <input type="date" name="DateNaissance" id="DateNaissance" class="form-control"  />
            </div>

            <div class="form-group">
                <label for="CodeClasse">Code Classe</label>
                <input type="number" name="CodeClasse" id="CodeClasse" class="form-control" placeholder="Entrez le code classe"  />
            </div>

            <div class="form-group">
                <label for="NumInscription">Numéro d'inscription</label>
                <input type="text" name="NumInscription" id="NumInscription" class="form-control" placeholder="Entrez le numéro d'inscription"  />
            </div>

            <div class="form-group">
                <label for="Adresse">Adresse</label>
                <input type="text" name="Adresse" id="Adresse" class="form-control" placeholder="Entrez l'adresse"  />
            </div>

            <div class="form-group">
                <label for="Mail">E-mail</label>
                <input type="email" name="Mail" id="Mail" class="form-control" placeholder="Entrez l'email"  />
            </div>

            <div class="form-group">
                <label for="Tel">Téléphone</label>
                <input type="text" name="Tel" id="Tel" class="form-control" placeholder="Entrez le numéro de téléphone"  />
            </div>

            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a href="ListeUtilisateurs" class="btn btn-secondary">Annuler</a>
        </form>
    </div>
</body>
</html>
