
@{
    ViewData["Title"] = "Créer un Groupe";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ4v3N3+zv6l2p6m5qF4F6z4m9Rl6s7Bx1HrR6c15Y5tF7eD9GZ4Eqf40BGp" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 20px;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn {
            width: 100%;
            padding: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Groupe" method="post">
            <div class="form-group">
                <label for="NomGroupe">Nom du Groupe :</label>
                <input type="text" id="NomGroupe" name="NomGroupe" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary">Enregistrer Groupe</button>
        </form>

        <div class="mt-3">
            <a href="/Groupe/Index" class="btn btn-secondary">Retour à la liste des groupes</a>
        </div>
    </div>

</body>
</html>
